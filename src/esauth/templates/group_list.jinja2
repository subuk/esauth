{% extends "base_with_menu.jinja2" %}

{% block content %}
<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Members</th>
      </tr>
    </thead>
    <tbody>
      {% for group in groups %}
      <tr>
        <td>{{ group.entry.cn|join(',') }}</td>
        <td>
          {% for member in group.get_members() %}
            {{ member.uid|first }}
          {% endfor %}
        </td>
      </tr>
      {% endfor %}
      <tr>
        <td colspan="4">
          <a class="btn btn-block btn-primary" href="add/">Add</a>
        </td>
      </tr>
    </tbody>
  </table>
</div>
{% endblock %}
